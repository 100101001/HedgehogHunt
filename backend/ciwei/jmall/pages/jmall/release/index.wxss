.radio-container{
  position: fixed;
  left:540rpx;
  top:850rpx;
  padding: 10rpx;
}
.radio-group text{
  flex-direction: row;
  display: flex;
  font-size: 28rpx;
  font-weight: 600rpx;
  margin-left: 20rpx;
  opacity: 0.6;
}
/* 未选中的样式 */
radio .wx-radio-input {
    width: 34rpx;
    height: 34rpx;
    border-radius: 50%;     /* 圆角 */
    /* border: 2rpx solid red; */
}

/* 选中后 背景及勾 的样式 */
radio .wx-radio-input.wx-radio-input-checked::before {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;     /* 圆角 */
    line-height: 40rpx;
    text-align: center;
    font-size: 30rpx;       /* 勾大小 */
    color: #fff;			/* 白色勾  */
    background:#e64340;
    transform: translate(-50%, -50%) scale(1);
}

