  display: flex;
  flex-direction: row;
  position: fixed;
  top:0;
  left: 0;
  width: 750rpx;
  background-color: #fff;
}

.type-navbar{
  white-space: nowrap;
  height: 88rpx;
  width: 750rpx;
  background-color: #fff;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.type-box {
  width: 375rpx;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 84rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}

.type-navbar-item {
  border-bottom: 4rpx solid #fff;
}

