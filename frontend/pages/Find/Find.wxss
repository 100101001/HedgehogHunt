/***遮罩层***/
.shade{
  width:100%;
  height:100%;
  top:0;
  background:rgba(0,0,0,0.5);
  overflow: scroll;
  /*要显示在wrap的上面 */
  z-index: 100;
  position: fixed;
}

/***显示教程***/
.show{
  display: block;
}
/***隐藏教程***/
.hide{
  display: none;
}

/***右滑食指图***/
.finger{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  top: 50%;
  left: 10%;
  animation: moveleft 1s infinite linear;
}


@keyframes moveleft{
  0%{ left: 10%; }
  25%{ left: 25%; }
  50%{ left: 50%; }
  75%{ left: 75%; }
  100%{ left: 80%; }
}


.fixed-tab{
  position: fixed;
  top: 71rpx;
  left: 0;
  right: 0;
  z-index: 10;
}

