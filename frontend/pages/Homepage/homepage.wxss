@import "../template/warn/warn-template.wxss";
@import "../template/navigate-bar/navigate-bar-template.wxss";

page {
  /*背景图片*/
  background-image: url("https://console.changshunlive.com/static/img/20190308185846.png");
  background-attachment: fixed;
  background-position: 0rpx -30rpx
}

.all-container{
  margin-top:70rpx;
}


.search_container {
  align-items: center;
  position: fixed;
  display: flex;
  flex-direction: row;
  padding: 5px;
  background-color: #f7931e;
  width: 750rpx;
  top: 0;
  z-index:500;
}

.search_box {
  display: flex;
  justify-content: center;
  margin-left: 20rpx;
  align-items: center;
  border-radius: 25rpx;
  width: 470rpx;
  font-size: 22rpx;
  flex-direction: row;
  background-color: #fff;
  height: 50rpx;
}
.search_icon{
  margin-left: 10rpx;
}
.search_text_box {
  margin-left: 25rpx;
  height: 35rpx;
  width: 360rpx;
  color: #f7931e;
}

.search_icon{
  margin-left: 12rpx;
}

.search_button {
  color: #fff;
  background-color: #f7931e;
  height: 50rpx;
  display: flex;
  align-items: center;
  padding-left:30rpx;
  padding-right: 30rpx;
  border: 2px #fff solid;
  border-radius: 30rpx;
  font-size: 22rpx;
  margin-left: 60rpx;
}

.image-container{
  display: flex;
  justify-content: center;
}

.image-container image{
  width: 700rpx;
  height: 300rpx;
  box-shadow:12rpx 12rpx 12rpx gainsboro;
  margin-top: 30rpx;
  border-radius: 30rpx;
}

.no-more-goods {
  text-align: center;
  font-size: 24rpx;
  padding-bottom: 228rpx;
  margin-top: 30rpx;
  color: #999;
}