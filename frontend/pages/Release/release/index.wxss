.container {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.tips-views {
  margin-left: 30rpx;
  font-size: 24rpx;
  justify-content: center;
  opacity: 0.7;
  align-content: center;
}

.summary-container {
  margin-top: -20rpx;
}

.summary {
  margin-top: 30rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  margin-left: 30rpx;
  background-color: #f2f2f2;
  width: 550rpx;
  height: 100rpx;
  padding: 15rpx;
}

.price-and-location {
  display: flex;
  flex-direction: column;
}

.hrz {
  border: 0.5px solid #ededed;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.item-container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item-container image {
  margin-left: 30rpx;
  width: 40rpx;
  height: 40rpx;
}

.label {
  font-size: 30rpx;
  font-weight: 500;
  margin-left: 30rpx;
  /*为了保证对齐设置宽度*/
  width: 160rpx;
}

.inputbox {
  font-size: 26rpx;
  font-weight: 500;
  margin-left: 80rpx;
}

.location-name {
  font-size: 26rpx;
  font-weight: 500;
  margin-left: 30rpx;
  margin-top: 10rpx;
  width: 660rpx;
  background-color: #ededed;
  border-radius: 10rpx;
  padding: 10rpx;
}

.get-location {
  background-color: #f7931e;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  color: #fff;
  width: 280rpx;
  margin: 20rpx 0 20rpx 30rpx;
  padding: 10rpx;
  border-radius: 10rpx;
}

.add-view {
  background-color: #efefef;
  margin: 10px;
  position: relative;
  margin-left: 10rpx;
  height: 200rpx;
  width: 200rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: -5rpx;
}

.add-pic-icon {
  width: 100rpx;
  height: 100rpx;
}

.pics-list {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
  margin-left: 20rpx;
}

.pics-item {
  margin: 10px;
  position: relative;
  height: 200rpx;
  width: 200rpx;
  border-radius: 10rpx;
  margin-left: -5rpx;
}

.pics-item .del {
  position: absolute;
  top: -11rpx;
  right: -11rpx;
  color: #fff;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  z-index: 2;
  line-height: 35rpx;
  text-align: center;
  background-color: #f00;
}

.pics-item image {
  border-radius: 10rpx;
  height: 200rpx;
  width: 200rpx;
}

.submit-btn {
  background-color: #f7931e;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  color: #fff;
  width: 580rpx;
  margin: 20rpx 0 20rpx 30rpx;
  border-radius: 10rpx;
}

.tips-btn {
  background-color: #f7931e;
  font-size: 24rpx;
  font-weight: 600;
  text-align: center;
  color: #fff;
  width: 580rpx;
  margin: 20rpx 0 20rpx 30rpx;
  border-radius: 10rpx;
}