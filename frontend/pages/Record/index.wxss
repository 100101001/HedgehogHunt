@import "../template/goods-item/goods-item-template.wxss";
@import "../template/search-bar/search-bar-template.wxss";
@import "../template/floating-ball/floating-ball-template.wxss";

page {
  /*背景图片*/
  background-image: url("https://console.changshunlive.com/static/img/20190308185846.png");
  background-attachment: fixed;
  background-position: 0 -30rpx;
}

.all_container {
  display: flex;
  justify-content: center;
}


/*顶部导航栏*/
.type-container{
  display: flex;
  flex-direction: row;
  position: fixed;
  top:70rpx;
  left: 0;
  width: 750rpx;
  background-color: #FFE4B5;
}

.type-navbar {
  white-space: nowrap;
  height: 68rpx;
  width: 375rpx;
}

.type-navbar-check-report {
  white-space: nowrap;
  height: 68rpx;
  width: 750rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.type-box {
  width: 250rpx;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 64rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}



.type-box-four {
  width: 185rpx;
}

.type-box-two{
  width: 375rpx;
}


.status-box-two{
   width: 375rpx;
}

.type-box-five{
  width: 150rpx;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 64rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}

/***状态栏每一项**/
.type-navbar-item {
  color: #999;
  font-weight: bold;
  font-size: 28rpx;
  border-bottom: 10rpx solid #FFE4B5;
  letter-spacing: 3rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
/***状态栏每一项被选中**/
.type-item-on {
  border-bottom: 10rpx solid #f7931e;
  color: #f7931e;
}
/***状态栏新消息提示**/
.content_tip {
  font-size: 20rpx;
  font-weight: 600;
  color: #fff;
  margin: 10rpx 0 0 15rpx;
  background-color: #f7931e;
  height: 30rpx;
  width: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  border-radius: 50%;
}

/**下方循环数据列表**/
.message_container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 140rpx;
}
.item_message{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

radio .wx-radio-input {
    width: 34rpx;
    height: 34rpx;
    border-radius: 50%;
}

radio .wx-radio-input.wx-radio-input-checked::before {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;     
    line-height: 40rpx;
    text-align: center;
    font-size: 30rpx;      
    color: #fff;			
    background:#f7931e;
    transform: translate(-50%, -50%) scale(1);
} 

.list-top{
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    box-sizing: border-box;
    background-color: #fff;
    display: flex;
    justify-content:space-between;
    padding: 0 30rpx;
    font-size: 28rpx;
    align-items: center;
}

.list-top .label{
    color: #000;
}
.list-top .edit-btn{
    color: #f7931e;
    height: 100%;
}

.no-more-goods {
  margin-top: 40rpx;
  text-align: center;
  font-size: 24rpx;
  padding-bottom: 128rpx;
  color: #999;
}