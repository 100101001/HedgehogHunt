@import "../template/goods-item/goods-item-template.wxss";
@import "../template/search-bar/search-bar-template.wxss";
page {
  /*背景图片*/
  background-image: url("https://console.changshunlive.com/static/img/20190308185846.png");
  background-attachment: fixed;
}

.all_container {
  display: flex;
  justify-content: center;
}


/*顶部导航栏*/
.type-container{
  display: flex;
  flex-direction: row;
  position: fixed;
  top:70rpx;
  left: 0;
  width: 750rpx;
  background-color: #fff;
}

.type-navbar {
  white-space: nowrap;
  height: 68rpx;
  width: 375rpx;
  background-color: #fff;
}

.type-navbar-check-report {
  white-space: nowrap;
  height: 68rpx;
  width: 750rpx;
  background-color: #fff;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.type-box {
  width: 250rpx;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 64rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}

.box-report{
  width: 150rpx;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 64rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}

.type-navbar-item {
  border-bottom: 4rpx solid #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.content_tip {
  font-size: 20rpx;
  font-weight: 600;
  color: #fff;
  margin: 10rpx 0 0 15rpx;
  background-color: #f7931e;
  height: 30rpx;
  width: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  border-radius: 50%;
}

.type-item-on {
  border-bottom: 4rpx solid #f7931e;
  color: #f7931e;
}

.message_container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 140rpx;
}

.item_message{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}


radio .wx-radio-input {
    width: 34rpx;
    height: 34rpx;
    border-radius: 50%;
}

radio .wx-radio-input.wx-radio-input-checked::before {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;     
    line-height: 40rpx;
    text-align: center;
    font-size: 30rpx;      
    color: #fff;			
    background:#f7931e;
    transform: translate(-50%, -50%) scale(1);
} 

.list-top{
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    box-sizing: border-box;
    background-color: #fff;
    display: flex;
    justify-content:space-between;
    padding: 0 30rpx;
    font-size: 28rpx;
    align-items: center;
}

.list-top .label{
    color: #000;
}
.list-top .edit-btn{
    color: #f7931e;
    height: 100%;
}

.no-more-goods {
  margin-top: 40rpx;
  text-align: center;
  font-size: 24rpx;
  padding-bottom: 128rpx;
  color: #999;
}

/***置顶丝带***/
.ribbon {
  background-color: #6495ED;
  overflow: hidden;
  white-space: nowrap;
  /* top left corner */
  position: absolute;
  margin-left: 230rpx;
  margin-top: 135rpx;
  /* for creating shadow */
  -webkit-box-shadow: 0 0 10px #888;
     -moz-box-shadow: 0 0 10px #888;
          box-shadow: 0 0 10px #888;
}

.ribbon text {
  border: 1rpx solid #faa;
  color: #fff;
  display: block;
  font: bold 23rpx 'Helvetica Neue', Helvetica, Arial, sans-serif;
  margin: 1rpx 0;
  padding: 10rpx 30rpx;
  text-align: center;
  text-decoration: none;
  /* for creating shadow */
  text-shadow: 0 0 5px #444;
}