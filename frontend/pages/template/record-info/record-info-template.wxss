  box-sizing: border-box;
  background-size: 55rpx auto;
}
.footer-box .shop-cart-btn {
  position: relative;
  width: 135rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  font-size: 20rpx;
  color: #f7931e;
  box-sizing: border-box;
  background-size: 44rpx auto;
}
.shop-cart-btn image{
  width: 60rpx;
  height: 60rpx;
  margin-top: 10rpx;
}

.footer-box .join-shop-cart{
