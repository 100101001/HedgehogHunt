@import "../info-auth-data/info-auth-template.wxss";

.tips-views{
  display: flex;
  font-size: 30rpx;
  justify-content: center;
  opacity: 0.7;
  align-content: center;
}

.loc_icon{
  width: 50rpx;
  height: 50rpx;
  margin-left: 10rpx;
}
.location{
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  background-color: #fff;
  width: 100%;
  padding: 20rpx;
}

.location view{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.loc_text{
  margin-left: 20rpx;
  font-size: 28rpx;
  opacity: 0.8;
  font-weight: 500;
}
.container {
  background-color: #F2f2f2;
  min-height: 100%;
  padding-bottom: 100rpx;
}
.swiper-container{
  width: 100%;
  position: relative;
}
.swiper_box {
  width: 100%;
  height:500rpx;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height:500rpx;
}
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #000;  
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .3;
}  
.swiper-container .dots .dot.active{  
  opacity: .6;
}
.goods-info{
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 35rpx 0;
  margin-bottom: 14rpx;
  width: 100%;
  position: relative;
}

.goods-info .goods-title{
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  line-height: 1.4;
  color: #000;
  flex-wrap: wrap;
  padding: 0 30rpx 0 30rpx;
}

.goods-status{
  display: flex;
  margin-top:30rpx;
  flex-direction: row;
  align-items: center;
}

.status-container {
  margin-left: 400rpx;
  color: #f7931e;
  font-size: 30rpx;
  font-weight: 600;
  border: 8rpx #f7931e solid;
  border-radius: 50rpx;
  height: 60rpx;
  width: 150rpx;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
  text-align: center;
}

.goods-price{
  margin-top: 10rpx;
  margin-left: 30rpx;
}

.goods_owner {
  display: flex;
  padding: 3rpx 10rpx 3rpx 10rpx;
  margin-left: 10rpx;
  border-radius: 40rpx;
  align-items: center;
  text-align: center;
  color: #fff;
  justify-content: center;
  background-color: #f7931e;
}

.goods-price{
  margin-top: 10rpx;
}

.row-arrow{
  width: 100%;
  box-sizing: border-box;
  padding: 0  120rpx 0 35rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  height: 102rpx;
  font-size: 28rpx;
  line-height: 102rpx;
  margin-bottom: 28rpx;
  background: #fff url(http://cdn.static.54php.cn/mina_order/arrow-right.png) no-repeat 697rpx center;
  background-size: 18rpx auto;
}
.goods-des-info{
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
}
.label-title{
  font-size:28rpx;
  color:#000000;
  padding: 30rpx;
  margin-bottom: -30rpx;
}
.goods-text{
  font-size:28rpx;
  color:#666666;
  line-height: 56rpx;
  margin-bottom: 30rpx;
  padding: 30rpx;
  word-break:break-all;/*文本换行*/ 
  line-break: true;
}
.des-imgs{
  width:100%;
}
.des-imgs image{
  width: 100%;
}
.footer-box{
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
}
.footer-box .contact {
  position: relative;
  width: 120rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
