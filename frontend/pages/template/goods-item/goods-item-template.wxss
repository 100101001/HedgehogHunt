.goods_container {
  box-shadow:12rpx 12rpx 12rpx gainsboro;
  display: flex;
  border-radius: 30rpx;
  flex-direction: column;
  margin-top: 30rpx;
  background-color: #fff;
  padding-bottom: 5px;
  
  height: 325rpx;
  width: 678rpx;
}

.auther_data {
  display: flex;
  flex-direction: row;
  line-height: 60rpx;
  margin: 0 0rpx 20rpx 30rpx;
}

.auther_avatar {
  height: 70rpx;
  width: 70rpx;
  margin-top: 20rpx;
}

.auther_message {
  display: flex;
  flex-direction: column;
  margin-left: 15rpx;
}

.auther_name {
  margin-top: 10rpx;
  font-size: 24rpx;
}

.release_date {
  color: #999;
  font-size: 20rpx;
  margin-top: -30rpx;
}


.report{
  width: 35rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  margin-top: 20rpx;
  margin-left: 300rpx;
}
.report image{
  height: 40rpx;
  width: 36rpx;
}
.report text{
  font-size: 18rpx;
  color: #e64340;
  margin-top: -20rpx;
}

.telcontainer {
  padding: 10rpx;
  border-radius: 20rpx;
  height: 50rpx;
  vertical-align: middle;
  border: 1px solid red;
  font-size: 32rpx;
  margin-top: 10rpx;
  margin-left: 172rpx;
}

.location_container {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}

.location_icon {
  height: 25rpx;
  width: 25rpx;
  margin-top: 10rpx;
}

.location_text {
  font-size: 20rpx;
  color: #b3b3b3;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.goods_image {
  margin-left: 30rpx;
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 15px;
  border-radius: 30rpx;
}

.summary_container {
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 5rpx;
}

.goods_message {
  align-items: center;
  display: flex;
  flex-direction: row;
  font-size: 22rpx;
}

.goods_owner {
  display: flex;
  padding: 3rpx 20rpx 3rpx 20rpx;
  margin-left: 20rpx;
  border-radius: 40rpx;
  align-items: center;
  text-align: center;
  color: #fff;
  justify-content: center;
  background-color: #f7931e;
}

.content_container {
  display: flex;
  flex-direction: row;
  margin-top: -10rpx;
}

.goods_content {
  margin-top: 20rpx;
  color: #b3b3b3;
  font-size: 24rpx;
  width: 370rpx;
}

.horizon{
  background-color:  #f7931e;
  height: 1px;
  border-radius: 2px;
  width: 365rpx;
  margin-top: 10rpx;
}

.operate{
  font-size: 13rpx;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  margin-left: 160rpx;
  right: 30rpx;
}

.operate_view{
  margin-left: 40rpx;
  display: flex;
  flex-direction: row;
  /*垂直居中*/
  align-items: center;
}

.connect_icon{
  width:22rpx;
  height: 22rpx;
}

.share_icon{
  width:22rpx;
  height: 22rpx;
}

.operate_text{
  color: #f7931e;
  margin-left: 10rpx;
}

