<template name="search-bar-template">
<!--搜索框-->
  <form bindsubmit="formSubmit">
    <view class="search_container">
      <!--发布，推荐，答谢页需要一个radio按钮-->
      <view class="search_box1 {{op_status == 2 || op_status==3 ? '' : 'box-wider1'}}">
        <icon type="search" class='search_icon' size='15' color="#f7931e"></icon>
        <input value='{{name}}' bindblur="onPullDownRefresh" bindfocus='onBindFocus' bindinput="listenerNameInput" class='search_text_box' type="text" placeholder='姓名' placeholder-style='color:#f7931e;'></input>
      </view>
      <!--发布，推荐，答谢页需要一个radio按钮-->
      <view class="search_box2 {{op_status == 2 || op_status==3?  '' : 'box-wider2'}}">
        <input value="{{type}}" bindfocus='onBindFocus' bindblur="onPullDownRefresh" bindinput="listenerGoodsNameInput" class='search_text_box' type="text" placeholder='物品' placeholder-style='color:#f7931e;'></input>
      </view>
      <!--推荐、答谢筛选新的推荐记录-->
      <radio wx:if="{{op_status == 2 || op_status==3}}" class="radio" value="buying"  bindtap="radioChange" checked="{{only_new}}">仅新增</radio>
      <!--发布筛选 寻物启事，失物招领，归还-->
      <button class="search_button" hidden="{{!saveHidden}}" bindtap="editTap">操作</button>
      <button class="search_button" hidden="{{saveHidden}}" bindtap="editTap">完成</button>
    </view>
  </form>

  <!--举报的选项卡-->
<!--  <view class="type-container" wx:if="{{op_status==4}}">-->
<!--    <scroll-view class="type-navbar-check-report">-->
<!--      <view class="type-box-five" wx:for="{{check_cat}}" wx:for-item="cat" wx:key="index">-->
<!--        <view id="{{cat.id}}" class="type-navbar-item {{check_status_id == cat.id ? 'type-item-on' : ''}}" bindtap="checkReportClick">-->
<!--          {{cat.name}}<view class="content_tip" wx:if="{{cat.value && cat.value!=0}}">{{cat.value}}</view>-->
<!--        </view>-->
<!--      </view>-->
<!--    </scroll-view>-->
<!--  </view>-->

  <!--选项卡-->
  <view class="type-container">
    <scroll-view class="type-navbar-check-report" scroll-x="true">
      <view class="type-box {{check_cat.length==2? 'type-box-two':''}}  {{check_cat.length==4? 'type-box-four':''}} {{check_cat.length==5? 'type-box-five':''}}" wx:for="{{check_cat}}" wx:for-item="cat" wx:key="index">
        <view id="{{cat.id}}" class="type-navbar-item {{check_status_id == cat.id ? 'type-item-on' : ''}}" bindtap="{{op_status==4? 'checkReportClick':'recordTypeClick'}}">
          {{cat.name}}<view class="content_tip" wx:if="{{cat.value && cat.value!=0}}">{{cat.value}}</view>
        </view>
      </view>
    </scroll-view>
  </view>

 <!--全选删除-->
  <view class="jiesuan-box" wx:if="{{ list.length }}" hidden="{{saveHidden}}">
    <view class="left-price">
      <radio class="all_select" bindtap="bindAllSelect" checked="{{allSelect}}" disabled="{{all_selected_disabled}}">全选</radio>
    </view>

    <!--发布的，匹配记录，答谢记录-->
    <view wx:if="{{op_status==0 || op_status==3 || op_status==2}}">
      <view class="to-pay-btn {{noSelect?'no-select':''}}" bindtap="deleteSelected">删除</view>
    </view>


    <!--归还通知-->
    <view wx:if="{{op_status==5}}">
      <view class="to-pay-btn {{noSelect?'no-select':''}}" bindtap="deleteSelected"
            wx:if="{{check_status_id==1 }}">不是我的
      </view>
      <view class="to-pay-btn {{noSelect?'no-select':''}}" bindtap="confirmSelected"
            wx:if="{{check_status_id==2}}">确认取回
      </view>
      <view class="to-pay-btn {{noSelect?'no-select':''}}" bindtap="deleteSelected"
            wx:if="{{check_status_id==3}}">删除
      </view>
    </view>

    <!--认领记录-->
    <view wx:if="{{op_status==1}}">
      <!--给了两个选项-->
      <view class="to-pay-btn {{noSelect?'no-select':''}}" bindtap="deleteSelected"
            wx:if="{{check_status_id==0 }}">确认取回
      </view>
      <view class="to-pay-btn {{noSelect?'no-select':''}}" bindtap="deleteSelected"
            wx:if="{{check_status_id==1}}">删除
      </view>
      <view class="to-pay-btn {{noSelect?'no-select':''}}" bindtap="deleteSelected"
            wx:if="{{check_status_id==2}}">删除
      </view>
    </view>

  </view>
</template>