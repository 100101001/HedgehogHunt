<!--index.wxml-->
<view class="container">
  <view class="search_container" wx:if="{{list.length}}">
    <view class="search_box1">
      <icon type="search" class='search_icon' size='15' color="#f7931e"></icon>
      <input value='{{name}}' bindfocus='onBindFocus' bindinput="onBindNameInput" class='search_text_box' type="text" placeholder='姓名' placeholder-style='color:#f7931e;'></input>
    </view>
    <view class="search_box2">
      <input value="{{type}}" bindfocus='onBindFocus' bindinput="onBindGoodsTypeInput" class='search_text_box' type="text" placeholder='物品种类' placeholder-style='color:#f7931e; '></input>
    </view>
    <view class="search_button" bindtap="onBindConfirm">搜索</view>
    <view class="search_button" hidden="{{!saveHidden}}" bindtap="editTap">编辑</view>
    <view class="search_button" hidden="{{saveHidden}}" bindtap="saveTap">完成</view>
  </view>
  <view class="message_container">
    <block wx:for="{{list}}" wx:key="index">
      <view class="goods_message">
        <radio class="radio" hidden="{{saveHidden}}" data-index="{{index}}" bindtap="selectTap" checked="{{item.selected}}" />
        <view class=".goods_container">
          <view class="auther_data">
            <image class="auther_avatar" src="{{item.avatar}}"></image>
            <view class="auther_message">
              <text class="auther_name">{{item.auther_name}}</text>
              <text class="release_date">{{item.updated_time}}</text>
            </view>
            <view class="status-container">酬金：{{item.reward}}</view>
            <view class="report" catchtap="toReport" data-id="{{id}}">
              <image src="/images/icons/report.png"></image>
              <text>举报</text>
            </view>
          </view>
          <view class="goods_content">{{item.summary}}</view>
        </view>
      </view>
    </block>
  </view>
  <view class="jiesuan-box" wx:if="{{ list.length }}" hidden="{{saveHidden}}">
    <view class="left-price">
      <radio class="radio" bindtap="bindAllSelect" checked="{{allSelect}}">全选</radio>
    </view>
    <view class="to-pay-btn {{noSelect?'no-select':''}}" bindtap="deleteSelected">删除</view>
  </view>
</view>