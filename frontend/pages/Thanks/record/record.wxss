@import "../../template/info-auth-data/info-auth-template.wxss";
@import "../../template/search-bar/search-bar-template.wxss";
page {
  /*背景图片*/
  background-image: url("https://console.changshunlive.com/static/img/20190308185846.png");
  background-attachment: fixed;
}

.all_container {
  display: flex;
  justify-content: center;
}
/*顶部导航栏*/
.type-container{
  display: flex;
  flex-direction: row;
  position: fixed;
  top:70rpx;
  left: 0;
  width: 750rpx;
  background-color: #fff;
}

.type-navbar {
  white-space: nowrap;
  height: 68rpx;
  width: 375rpx;
  background-color: #fff;
}

.type-navbar-check-report {
  white-space: nowrap;
  height: 68rpx;
  width: 750rpx;
  background-color: #fff;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.type-box {
  width: 375rpx;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 64rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}

.type-navbar-item {
  border-bottom: 4rpx solid #fff;
}

.type-item-on {
  border-bottom: 4rpx solid #f7931e;
  color: #f7931e;
}

.container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 70rpx;
}

.goods_container {
  box-shadow:12rpx 12rpx 12rpx gainsboro;
  display: flex;
  border-radius: 30rpx;
  flex-direction: column;
  margin-top: 30rpx;
  background-color: #fff;
  padding:20rpx;
  width: 600rpx;
}

.auther_data {
  display: flex;
  flex-direction: row;
  line-height: 60rpx;
  align-items: center;
  margin:auto;
}

.auther_avatar {
  height: 70rpx;
  width: 70rpx;
}

.auther_message {
  display: flex;
  flex-direction: column;
  margin-left: 15rpx;
  width: 240rpx;
}

.auther_name {
  margin-top: 10rpx;
  font-size: 24rpx;
}

.release_date {
  color: #999;
  font-size: 20rpx;
  margin-top: -30rpx;
}

.status-container {
  color: #fff;
  font-size: 24rpx;
  line-height: 24rpx;
  height: 38rpx;
  font-weight: 600;
  background-color: #f7931e;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
  text-align: center;
}

.report{
  width: 35rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  margin-top: 20rpx;
  margin-left: 40rpx;
}

.report image{
  height: 40rpx;
  width: 36rpx;
}
.report text{
  font-size: 14rpx;
  color: #f7931e;
  margin-top: -20rpx;
  font-weight: 600;
}
.goods_message{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.goods_content {
  color: #b3b3b3;
  font-size: 30rpx;
  padding: 15rpx;
}

.message_container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 70rpx;
}

radio .wx-radio-input {
    width: 34rpx;
    height: 34rpx;
    border-radius: 50%;
}

radio .wx-radio-input.wx-radio-input-checked::before {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;     
    line-height: 40rpx;
    text-align: center;
    font-size: 30rpx;      
    color: #fff;			
    background:#f7931e;
    transform: translate(-50%, -50%) scale(1);
} 

.list-top{
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    box-sizing: border-box;
    background-color: #fff;
    display: flex;
    justify-content:space-between;
    padding: 0 30rpx;
    font-size: 28rpx;
    align-items: center;
}

.list-top .label{
    color: #000;
}
.list-top .edit-btn{
    color: #f7931e;
    height: 100%;
}