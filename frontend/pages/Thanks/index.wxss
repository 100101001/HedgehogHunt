@import "../template/use-balance/use-balance.wxss";

.auth-data{
  width: 100%;
  background-color: #ffffff;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
  margin-left: 50rpx;
  margin-top: 80rpx;
}

.auth-item{
  margin-top: 20rpx;
  margin-left: 10rpx;
}

.auther-name{
  font-size:34rpx;
}

.updated-time{
  color: #B0B0B0;
  font-size:24rpx;
  margin-top:15rpx;
}

.money-container{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: auto;
}

.radio{
  margin:auto;
}

.radio text{
  font-size: small;
  margin-bottom: 30rpx;
  margin-right:26rpx;
}

.pay-button{
  background-color: #f7931e;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  color: #fff;
  width: 260rpx;
  margin: 20rpx 0 20rpx 40rpx;
  padding: 10rpx;
  border-radius: 10rpx;
}

.price{
  background-color: #f7931e;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  color: #fff;
  width: 260rpx;
  margin: 20rpx 0 20rpx 70rpx;
  padding: 10rpx;
  border-radius: 10rpx;
}

.container{
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.header {
  margin: 40rpx 0 90rpx 50rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
}

.header image {
  width: 200rpx;
  height: 200rpx;
}

.content {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}

.bottom {
  width: 600rpx;
  border-radius: 80rpx;
  margin-top: 70rpx;
  font-size: 35rpx;
}

.summary{
  margin-left: 75rpx;
  margin-top: 30rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  background-color: #f2f2f2;
  width: 570rpx;
  height: 100rpx;
  padding: 15rpx;
}

.amount_box {
  display: flex;
  flex-direction: row;
  margin:auto;
  border-color:#B0B0B0;
  border-width: 2rpx;
  border-style: dashed;
  align-items: center;
  padding-right: 10rpx;
  padding-left: 10rpx;
}

.amount_input{
  width: 80rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.amount_box text{
  margin-bottom: 40rpx;
}
