/* pages/Mine/Mine-item-modify/Mine-item-modify.wxss */
@import "/pages/template/mine-item/mine-item-template.wxss";

page {
  background-color: #f8f8f8;
}

.btn {
  width: 750rpx;
  color: #fff;
  margin-top: 40rpx;
}

/*姓名、电话修改页面及充值界面*/
.name_container {
  margin-top: 20rpx;
  display: flex;
  flex-direction:column;
  font-size: 16px;
}

.name_innercontainer {
  background-color: #fff;
  padding: 30rpx;
  display: flex;
  flex-direction:row;
  justify-content: center;
  align-items: center;
}

.title{
  margin-left: 50rpx;
}

.name_box {
  opacity: 0.7;
  margin-left: 60rpx;
}

.money_box {
  opacity: 0.7;
  margin-left: 60rpx;
}

/*地址修改页面*/
.address_container {
  margin-top: 20rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  font-size: 16px;
}

.area{
  margin-left: 60rpx;
}

.next_img {
  margin-bottom: 25rpx;
  margin-top: -5rpx;
  width: 50rpx;
  height: 50rpx;
}


.address_innercontainer{
  margin-left: 80rpx;
  margin-top: 60rpx;
  display: flex;
  flex-direction: row;
  height: 150rpx;

}

.address_box {
  opacity: 0.7;
  margin-left: 60rpx;
  width: 450rpx;
}

/*二维码显示及保存界面*/
.container{
  display: flex;
  flex-direction: column;
}

.qrcode_container{
  display: flex;
  justify-content: center;
}

.qrcode{
  height: 400rpx;
  width: 400rpx;
}

/*授权设置界面*/

.switch_container{
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-top: 30rpx;
}

.switch_innercontainer{
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  margin-left: 60rpx;
  border-bottom: 1px solid #f8f8f8;
}

.switch_title{
  margin-top: 6px;
}

.switch_switch{
  margin-left: 40rpx;
}