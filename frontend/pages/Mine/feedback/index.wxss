/**反馈输入框**/
.inputbox{
  outline-style: none ;
  border: 3rpx solid #ccc;
  box-shadow:4rpx 4rpx 10rpx #333333;
  border-radius: 30rpx;
  height: 300rpx;
  font-size: 30rpx;
  padding: 10rpx 10rpx;
  width: 90%;
  margin: 10rpx auto;
  margin-top: 20rpx;
}
/**反馈输入**/
textarea{
  width: 100%;
  color: #888888;
}
/**反馈输入框聚焦**/
.input-focus {
  border: 3rpx solid rgba(247, 147, 30, 0.4);
  box-shadow:4rpx 4rpx 10rpx #f7931e;
}
/**反馈输入框输入过多**/
.input-warn{
  border: 5rpx solid #fff;
  box-shadow:4rpx 4rpx 10rpx red;
}