/***增加图片***/
.add-view{
  background-color: #efefef;
  margin: 10rpx;
  position: relative;
  margin-left: 10rpx;
  height: 200rpx;
  width: 200rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.add-pic-icon{
  width: 100rpx;
  height: 100rpx;
}
/***图片列表***/
.pics-list {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
}
.pics-item {
  margin: 10rpx;
  position: relative;
  height: 200rpx;
  width: 200rpx;
  border-radius: 10rpx;
  border: 3rpx solid #cdcdcd;
  box-shadow:1rpx 1rpx 1rpx #cdcdcd;
}
.pics-item .del {
  position: absolute;
  top: -11rpx;
  right: -11rpx;
  color: #fff;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  z-index: 2;
  line-height: 35rpx;
  text-align: center;
  background-color: #f7931e;
}

.pics-item image {
  border-radius: 10rpx;
  height: 200rpx;
  width: 200rpx;
}

.submit-btn{
  background-color:#f7931e;
  font-size: 26rpx;
  font-weight: 600;
  text-align: center;
  color:#fff;
  position:fixed;
  left:530rpx;
  top:1070rpx;
  padding: 3rpx 30rpx 3rpx 30rpx;
  border-radius: 40rpx;
}


