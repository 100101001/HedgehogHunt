@import "../template/mine-item/mine-item-template.wxss";
@import "../template/navigate-bar/navigate-bar-template.wxss";

page{
  background-color: #fff;
}
.user{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  height: 200rpx;
  width: 200rpx;
  margin-top: 50rpx;
}

.nickname {
  font-size: 24px;
  font-weight: 600;
}

.wechatid {
  font-size: 15px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-bottom: 200rpx;
}

.fundation_message{
  margin-left: 64rpx;
  display: flex;
  flex-direction: column;
  margin-top: 70rpx;
  width: 642rpx;
  height: 54rpx;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
  font-weight: 700;
  border-radius: 30rpx;
  background-color: #f7931e;
  letter-spacing: 3px;
}

.userinfo_container {
  justify-content: center;
  align-items: center;
  display: flex;
  flex-direction: row;
  margin-left: 64rpx;
  width: 642rpx;
  border-bottom: 1px solid #ededed;
  text-align: center;
}

