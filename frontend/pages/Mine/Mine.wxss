}

.next {
  display: flex;
  flex: 1;
  justify-content: flex-end center;
  align-items: center;
  margin-right: 20rpx;
}

.next_img {
  width: 32rpx;
  height: 30rpx;
  margin-top: 5rpx;
  margin-right: 20rpx;
}

.content {
  font-size: 20rpx;
  font-weight: 600;
  color: #fff;
  margin: -35rpx 0 0 -80rpx;
  background-color: #f7931e;
  height: 30rpx;
  width: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  border-radius: 50%;
}

/*账户信息*/
.recharge_btn {
  color: #f7931e;
