<import src="../../template/mine-item/mine-item-template.wxml" />
<view class="user">
  <image class="avatar" src="{{userInfo.avatar}}"></image>
  <view class="nickname">{{userInfo.nickname}}</view>
</view>

<view class="userinfo">
  <view class="fundation_message">基本信息</view>
  <block wx:for="{{items}}" wx:key="index">
    <view class="userinfo_container" bindtap="{{item.act}}">
      <view class="title">{{item.name}}</view>
      <view class="next">
        <view class="content">{{item.value}}</view>
        <image class='next_img' src='{{item.src}}'></image>
      </view>
    </view>
  </block>
  <view class="userinfo_container" data-id="3" bindtap="onCatchTap">
    <view class="title">二维码</view>
    <view class="next">
      <view class="recharge_btn" bindtap="getQrCode" wx:if="{{!has_qrcode}}">获取</view>
      <view class="recharge_btn" bindtap="checkQrCode" wx:if="{{has_qrcode && !show_qrcode}}">查看</view>
      <view class="recharge_btn" bindtap="checkQrCode" wx:if="{{has_qrcode && show_qrcode}}">隐藏</view>
    </view>
  </view>
  <image class="qr_code" src="{{qrCode}}" bindtouchstart='touchstart' bindtouchend='touchend' bindtap='saveImg' data-id="0" wx:if="{{show_qrcode}}"></image>
  <text class="save-qrcode-text" wx:if="{{show_qrcode}}">长按保存</text>
</view>