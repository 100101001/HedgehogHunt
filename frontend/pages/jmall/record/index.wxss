page{
  min-height: 100%;
  background-color: #fff;
}

.type-container{
  display: flex;
  flex-direction: row;
  position: fixed;
  top:0;
  left: 0;
  width: 750rpx;
  background-color: #fff;
}

.type-navbar {
  white-space: nowrap;
  height: 88rpx;
  width: 375rpx;
  background-color: #fff;
}

.type-navbar-check-report {
  white-space: nowrap;
  height: 88rpx;
  width: 750rpx;
  background-color: #fff;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.type-box {
  width: 160rpx;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 84rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}

.type-navbar-item {
  border-bottom: 4rpx solid #fff;
}

.type-item-on {
  border-bottom: 4rpx solid #e64340;
}

.container {
  background-color: #fff;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  padding-bottom:60rpx;
  margin-top: 110rpx;
}
.tips-views{
  display: flex;
  font-size: 26rpx;
  justify-content: center;
  opacity: 0.7;
  align-content: center;
  margin-top:40rpx;
}
.time-container{
  margin-top: 10rpx;
  font-size: 22rpx;
  opacity: 0.7;
}
.goods-name{
  font-size: 26rpx;
  font-weight: 500rpx;
  margin-left: 10rpx;
}
.hrz{
  border: 1rpx solid #eee;
  width: 100%;
  margin-bottom: 10rpx;
  margin-top: 10rpx;
}
.goods-info{
    display: flex;
    padding: 20rpx 0 20rpx 20rpx; 
    width: 100%;
    box-sizing: border-box;
    background-color: #fff;
    padding-bottom: 50rpx;
    margin-left: 100rpx;
}

.text-box{
    width: 440rpx;
    position: relative;
}

.goods-info .text-box .goods-title{
    font-size: 28rpx;
    color:#000;
    padding: 10rpx 20rpx 5rpx 0;
}

.prcie-and-status{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.up-status{
  display: flex;
  margin-left: 30rpx;
  font-size: 26rpx;
  padding: 5rpx 20rpx 5rpx 20rpx;
  background-color: #e64340;
  color: #fff;
  border-radius: 20rpx;
}
.down-status{
  display: flex;
  margin-left: 30rpx;
  font-size: 26rpx;
  padding: 5rpx 20rpx 5rpx 20rpx;
  background-color: #009578;
  color: #fff;
  border-radius: 20rpx;
}
.goods-price{
  font-size: 26rpx;
    color:#e64340;
}
.edit-btn{
  padding: 10rpx;
}

.kill-container{
  width: 100rpx;
  border-radius: 10rpx;
  margin-left: 30rpx;
  background-color: #e64340;
  display: flex;
  align-items: center;
  text-align: center;
  justify-items: center;
  justify-content: center;
}
.no-deal-container{
  width: 100rpx;
  border-radius: 10rpx;
  margin-left: 30rpx;
  display: flex;
  align-items: center;
  text-align: center;
  background-color: #009578;
  justify-items: center;
  justify-content: center;
}

.kill-text{
  color: #fff;
  text-align: center;
  font-size: 26rpx;
}
.edit-container{
    margin-left: 30rpx;
    margin-top: -10rpx;
}
.edit-image{
  width: 50rpx;
  height: 50rpx;

}

.up-and-down1{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  border: solid 2px #e64340;
  border-radius: 10rpx;
}
.img{
  width: 160rpx;
    height:160rpx;
    border-radius: 10rpx;
    margin-top:10rpx;
    margin-right: 20rpx;
}
.up-and-down2{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  border: solid 2px #009578;
  border-radius: 10rpx;
}

.up-down-icon{
  width: 50rpx;
  height: 30rpx;
}

.up-down-text{
  font-size: 22rpx;
}

.logout-check-report{
  background-color: #e64340;
  border-radius: 20rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  width: 100%;
  font-size: 34rpx;
  color: #fff;
}